.newslist-left
  .article
    .article-title
      span.rmwz
        | 热门文章
      a.ckqb[href=""]
        | 查看全部
      a[href=""]
        = image_tag("video/jt.png")
    .title1
      = image_tag("video/picture1.png")
      span
        | 关于表彰兵团妇女岗位建功先
        br
        | 进集体（个人）的决定
    ul.article-list
      - @articles.each do |article|
        li
          a[href="/newsdetails/newsdetails/#{article.id}"]
            = article.title
          span
