        = image_tag("video/jt.png")
    ul
      - @videos.each do |video|
        li
          .videoimg
            = image_tag video.asset.url(:medium)
          / img.vid[src="/assets/video/video1.png" alt=""]
          .bottom[style="padding-top: 10px;padding-bottom: 10px;"]
            span.sks[style="padding-left: 4%;"]
              =video.title
            a.star[href=""]
              = image_tag("video/star.png")
            a[href=""]
              = image_tag("video/sc.png")
            p[style="padding-left: 4%;"]
              =video.written_by
