.newslist-right
  ul.right-title.nav.nav-tabs
    li#home.ynjd onclick="getSearch()"
      a href="#home" data-toggle="tab"
        | 业内焦点
    li#exchange.zwjl onclick="getSearch1()"
      a href="#exchange" data-toggle="tab"
        | 中外交流
    li#association.xhxw onclick="getSearch2()"
      a href="#association" data-toggle="tab"
        | 协会新闻
  .tab-content
    .tab-pane.fade.in.active#home
      .screen
        ul
          li.pl
            | 排列 :
          li.time
            | 时间
          li.xs
            | 显示 :
            input[type="text"]
            img[src="/assets/newslist/adsada_03.png" alt=""]
          li.sx
            | 筛选 :
            input[type="text"]
            = image_tag("video/adsada_03.png")
            input[type="text"]
            = image_tag("video/adsada_05.png")
      .list
        ul[style="width: 100%;margin-left: 0;"]
          - @articles.each do |article|
            li
              .picture
                = image_tag article.asset.url(:medium)
              .new-content
                .titltbox
                  a.zuo[href="/newsdetails/newsdetails/#{article.id}" aria-label="Previous"]
                    =article.title
                  .you[style="display: flex;justify-content: flex-end;"]
                    .yuedu
                      | 阅读：
                      = article.likes_count
                    .pinglun
                      | |评论：1009
                p
                  =article.written_by
                .box
                  = link_to "收藏","post/star"
                  .bshare-custom
                    a.bshare-more.bshare-more-icon.more-style-sharethis[title="更多平台"]
