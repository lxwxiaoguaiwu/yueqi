javascript:
  function getSearch()
  {

    var keyword=document.getElementById("home")
    window.location.href="/newslist/newslist#home?keyword="+keyword.id;
    $('#home').addClass('active');
    $('#association').removeClass('active');
    $('#exchange').removeClass('active');
  }
  function getSearch1()
  {
    var keyword=document.getElementById("exchange")
    window.location.href="/newslist/newslist#exchange?keyword="+keyword.id;
    $('#exchange').addClass('active');
    $('#home').removeClass('active');
    $('#association').removeClass('active');
  }
  function getSearch2()
  {

    var keyword=document.getElementById("association")
    window.location.href="/newslist/newslist#association?keyword="+keyword.id;
    $('#association').addClass('active');
    $('#exchange').removeClass('active');
    $('#home').removeClass('active');
  }
