.register-content
  .left
    .article
      .article-title
        span.rmwz
          | 相关申请
        a.ckqb[href="/newslist/wenzhanglist"]
          | 查看全部
        a[href=""]
          img[src="/assets/video/jt.png" height="11" width="11"]
      ul.article-list
        - @articles.each do |article|
          li
            a[href="/newsdetails/newsdetails/#{article.id}"]
              = article.title
            span
              = article.updated_at.strftime("%m-%d")
    .video
      .video-title
        span.rmwz
          | 热门视频
        a.ckqb[href="/newslist/videolist"]
          | 查看全部
        a[href=""]
          img[src="/assets/video/jt.png" height="11" width="11"]
      ul
        - @videos.each do |video|
          li
            .videoimg
              = image_tag video.asset.url(:medium)
            .bottom[style="padding-top: 10px;padding-bottom: 10px;"]
              span.sks
                =video.title
              a.star[href=""]
                = image_tag("video/star.png")
              a[href=""]
                = image_tag("video/sc.png")
              p
                =video.written_by
              a.bf[href=""]
                = image_tag("video/bf.png")
              span[style="font-size: 10px;color: #2763af;"]
                | 112.3万
  .right
    ul.right-title
      li.ynjd
        | 申请注册办法
