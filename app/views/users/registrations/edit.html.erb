<div class="sgin">
  <div class="title">
    <p>修改密码</p>
  </div>
  <div class="content">
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :email, label:"邮箱", :placeholder => "用户名或邮箱", required: true, autofocus: true %>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
        <% end %>

        <%= f.input :password, label:"密码", :placeholder => "输入密码", autocomplete: "off", hint: "leave it blank if you don't want to change it", required: false %>
        <%= f.input :password_confirmation, label:"确认密码", :placeholder => "再次输入密码", required: false %>
        <%= f.input :current_password, label:"当前密码", :placeholder => "当前密码", hint: "we need your current password to confirm your changes", required: true %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "修改" %>
      </div>
    <% end %>
    <%= link_to "返回", :back, :class => "fanhui"%>
  </div>
</div>
